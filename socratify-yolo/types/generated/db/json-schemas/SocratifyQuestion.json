{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/SocratifyQuestionSchema",
  "definitions": {
    "SocratifyQuestionSchema": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "text": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "timestamp": {
          "type": "string"
        },
        "choices": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "text": {
                "type": "string"
              },
              "correct": {
                "type": "boolean"
              }
            },
            "required": [
              "title",
              "text"
            ],
            "additionalProperties": false
          }
        },
        "rankingItems": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "text": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            },
            "required": [
              "id",
              "text"
            ],
            "additionalProperties": false
          },
          "description": "Items to be ranked by the user"
        },
        "rankingInstructions": {
          "type": "string",
          "description": "Instructions for how to rank the items"
        },
        "isRanking": {
          "type": "boolean",
          "description": "Whether this is a ranking-type question"
        }
      },
      "required": [
        "id",
        "text",
        "type",
        "timestamp"
      ],
      "additionalProperties": false
    }
  }
}