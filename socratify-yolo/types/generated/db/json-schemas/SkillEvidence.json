{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/SkillEvidenceSchema",
  "definitions": {
    "SkillEvidenceSchema": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "attemptId": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "proficiencyScore": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          },
          "proficiencyLevel": {
            "type": "string",
            "enum": [
              "BEGINNER",
              "APPRENTICE",
              "PRACTITIONER",
              "EXPERT",
              "TOP_10"
            ]
          },
          "context": {
            "type": "string"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "feedbackNotes": {
            "type": "string"
          }
        },
        "required": [
          "timestamp",
          "proficiencyScore",
          "proficiencyLevel"
        ],
        "additionalProperties": false
      }
    }
  }
}